<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <link type="text/css" href="~/Scripts/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #000000;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", new { style = "color:ffffff", @class = "nav-link" })
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Empresa", "Empresa", "Home", new { style = "color:ffffff", @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Portfólio", "Portifolio", "Home", new { style = "color:ffffff", @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Suporte", "Suporte", "Home", new { style = "color:ffffff", @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contato", "Contato", "Home", new { style = "color:ffffff", @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Entre ou Cadastre-se", "Login", "Home", new { style = "color:ffffff", @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    @RenderBody()

    <footer style="padding-top: 0; padding-bottom: 0;">
        <div class="container-fluid" style="background-color: #000000;">
            <div class="row text-center">
                <div class="col-md-4">
                    <hr class="light">
                    <h5>Horários</h5>
                    <hr class="light">
                    <p>De segunda à sexta: 07hr às 22hr</p>
                    <p>Sábado: 12hr às 20hr</p>
                    <p>Domingo: Fechado.</p>
                </div>
                <div class="col-md-4">
                    <hr class="light">
                    <h5>Áreas de serviço</h5>
                    <hr class="light">
                    <p>Vila Leopoldina, São Paulo, 437</p>
                    <p>Carapicuíba, São Paulo, 103</p>
                </div>
                <div class="col-md-4">
                    <hr class="light">
                    <h5>Contato Rápido</h5>
                    <hr class="light">
                    <p>(11) 4147-1234</p>
                    <p>anubisfuneraria@gmail.com</p>
                </div>
                <div class="col-12 pb-0">
                    <hr class="light-100">
                    <img src="imagens/emgelf logo.PNG" style="width: 100px; height: 100px; padding-bottom: 10px;">
                    <p>Website inteiramente produzido pela empresa Emgelf Corporation.</p>
                    <p>COPYRIGHT &copy; 2019. TODOS OS DIREITOS RESERVADOS.</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>