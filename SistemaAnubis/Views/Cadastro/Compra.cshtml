@model SistemaAnubis.Models.DTO.CompraDTO

@{
    ViewBag.Title = "Cadastrar Administrador";
    if (SistemaAnubis.MvcApplication.Session.Instance.Nome == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
        <h1>Faça login primeiro</h1>
        <a onclick="location.href='@Url.Action("Login","Home")'">Voltar</a>

    }
    else
    {
        using (Html.BeginForm("Compra", "Cadastro", FormMethod.Post, new { @id = "formUrna", @style = "padding: 10% 0 10% 0;", @class = "form-container" }))
        {

            <legend class="text-center card-title" style="color:white">Comprar</legend>
            <div class="form-group col-4 mx-auto" style="margin-bottom: 0;">
                <fieldset>
                    @Html.ValidationSummary()

                    @Html.LabelFor(m => m.Cliente)




                    <div class="col text-center my-3">
                        <button type="submit" class="btn btn-primary" name="btn">Cancelar</button>
                        <button type="submit" class="btn btn-primary" name="btn">Enviar</button>
                    </div>
                </fieldset>
            </div>
        }

    }